<table width="100%" cellpadding="0" cellspacing="0" border="0">
    <tbody>
      <tr>
        <td width="100%">
          <div style="max-width:600px;Margin:0 auto">
            <table
              align="center"
              cellpadding="0"
              cellspacing="0"
              style="border-spacing:0;font-family:gt-eesti,ArialMT,Helvetica,Arial,sans-serif;Margin:0 auto;padding:12px;width:100%;max-width:500px"
            >
              <tbody>
                <!-- logo -->
                <tr>
                  <td>
                    <a href=<%= homepage %> target="_blank">
                      <img src="https://i.ibb.co/Fzt1RmW/logo.webp"
                        style="display:block; margin:auto;margin-bottom:20px"
                        width="150" height="120"
                      />
                    </a>
                  </td>
                </tr>
                
                <!-- body -->
                <tr>
                  <td>
                      <h3 style="font-family:Helvetica,Arial,sans-serif;">Hi <%= firstName %>, </h3>
                      
                      <h4 style="font-size:18px;word-break:normal;text-align:center;margin-bottom:15px;">
                        Your PropertyFinder email verification code:
                      </h4>

                      <div
                        style="background-color:#0847A8;color:#fff;text-align:center;border-radius:7px;padding:8px 15px;border-color:transparent;font-weight:bold;font-size:24px;width:fit-content;margin:auto"
                      >
                      <%= code %>
                      </div>

                      <p style="word-break:normal;text-align:center;padding-bottom:15px;border-bottom: 1px solid #ddd;">
                        You should never share this code with anyone. If you did not request a verification code, it is safe to ignore this email
                      </p>
                  </td>
                </tr>

                <!-- do not reply -->
                <tr>
                  <td>
                    <p style="text-align:center;padding:0;margin-top:15px;">
                      This email was sent to you by PropertyFinder (Do not reply)
                  </p>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </td>
      </tr>
    </tbody>
  </table>